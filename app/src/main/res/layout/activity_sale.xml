<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".Activities.saleActivity">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="106dp"
        android:layout_height="34dp"
        android:layout_marginStart="74dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="204dp"
        android:layout_marginBottom="15dp"
        android:text="Product:"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/et_item2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_store2" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="174dp"
        android:layout_height="34dp"
        android:layout_marginStart="74dp"
        android:layout_marginEnd="136dp"
        android:layout_marginBottom="6dp"
        android:text="% of discount:"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/et_discount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_item2" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="106dp"
        android:layout_height="34dp"
        android:layout_marginStart="74dp"
        android:layout_marginEnd="204dp"
        android:text="Store:"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/et_store2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_city2" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="106dp"
        android:layout_height="34dp"
        android:layout_marginStart="74dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="204dp"
        android:layout_marginBottom="3dp"
        android:text="City:"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/et_city"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread" />

    <EditText
        android:id="@+id/et_store2"
        android:layout_width="243dp"
        android:layout_height="41dp"
        android:layout_marginStart="71dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="17dp"
        android:background="@color/colorPrimary"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/textView11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <EditText
        android:id="@+id/et_city2"
        android:layout_width="243dp"
        android:layout_height="41dp"
        android:layout_marginStart="74dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="67dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorPrimary"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/textView12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <EditText
        android:id="@+id/et_item2"
        android:layout_width="243dp"
        android:layout_height="41dp"
        android:layout_marginStart="74dp"
        android:layout_marginEnd="67dp"
        android:layout_marginBottom="18dp"
        android:background="@color/colorPrimary"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/textView14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <EditText
        android:id="@+id/et_discount"
        android:layout_width="243dp"
        android:layout_height="41dp"
        android:layout_marginStart="74dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="67dp"
        android:layout_marginBottom="4dp"
        android:background="@color/colorPrimary"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/btn_updateprice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <Button
        android:id="@+id/btn_updateprice"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="179dp"
        android:layout_height="62dp"
        android:layout_marginStart="103dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="102dp"
        android:layout_marginBottom="10dp"
        android:text="Update sale"
        android:textSize="24sp"
        android:onClick="updateSale"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_discount" />
</android.support.constraint.ConstraintLayout>