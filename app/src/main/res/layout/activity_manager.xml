<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".Activities.managerActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="339dp"
        android:layout_height="58dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="80dp"
        android:background="@android:color/transparent"
        android:text="Hi! what would you like to do?"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/button_makeListManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_makeListManager"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="78dp"
        android:layout_marginEnd="63dp"
        android:onClick="makeListBTN"
        android:text="Make a shoping list"
        app:layout_constraintBottom_toTopOf="@+id/button_updatePrice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/button_updatePrice"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="78dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="63dp"
        android:text="updatePrice"
        android:onClick="updatePrice"
        app:layout_constraintBottom_toTopOf="@+id/button_addStore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_makeListManager" />

    <Button
        android:id="@+id/button_addStore"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="78dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="63dp"
        android:text="Add a Store"
        app:layout_constraintBottom_toTopOf="@+id/btn_logoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_updatePrice" />

    <Button
        android:id="@+id/btn_logoutManager"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="78dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="63dp"
        android:layout_marginBottom="64dp"
        android:onClick="logoutBTN"
        android:text="logout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_addStore" />

</android.support.constraint.ConstraintLayout>