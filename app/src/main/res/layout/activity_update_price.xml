<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".Activities.updatePriceActivity">

    <EditText
        android:id="@+id/et_city"
        android:layout_width="243dp"
        android:layout_height="41dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="34dp"
        android:background="@color/colorPrimary"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/textView8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <EditText
        android:id="@+id/et_store"
        android:layout_width="243dp"
        android:layout_height="41dp"
        android:layout_marginStart="85dp"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="20dp"
        android:background="@color/colorPrimary"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/textView9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <EditText
        android:id="@+id/et_item"
        android:layout_width="243dp"
        android:layout_height="41dp"
        android:layout_marginStart="85dp"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="19dp"
        android:background="@color/colorPrimary"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/textView10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <EditText
        android:id="@+id/et_price"
        android:layout_width="243dp"
        android:layout_height="41dp"
        android:layout_marginStart="85dp"
        android:layout_marginEnd="84dp"
        android:background="@color/colorPrimary"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="106dp"
        android:layout_height="34dp"
        android:layout_marginStart="74dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="204dp"
        android:layout_marginBottom="3dp"
        android:text="City:"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/et_city"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="106dp"
        android:layout_height="34dp"
        android:layout_marginStart="74dp"
        android:layout_marginEnd="204dp"
        android:layout_marginBottom="1dp"
        android:text="Store:"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/et_store"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_city" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="106dp"
        android:layout_height="34dp"
        android:layout_marginStart="74dp"
        android:layout_marginEnd="204dp"
        android:layout_marginBottom="1dp"
        android:text="Product:"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/et_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_store" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="106dp"
        android:layout_height="34dp"
        android:layout_marginStart="74dp"
        android:layout_marginEnd="204dp"
        android:text="Price:"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/et_price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_item" />

    <Button
        android:id="@+id/btn_updatePriceNow"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="193dp"
        android:layout_height="64dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="99dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="serif"
        android:text="Update price"
        android:onClick="updatePriceNow"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_price" />
</android.support.constraint.ConstraintLayout>